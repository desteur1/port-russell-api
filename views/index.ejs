<!-- page d'accueil + login --->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include("partials/header") %>

    <h2>Bienvenue sur l’application Port Russell</h2>

    <p>Gérez les catways et leurs réservations facilement.</p>

    <h3>Connexion</h3>

    <form action="/auth/login-view" method="POST">
      <label>Email :</label>
      <input type="email" name="email" required />

      <label>Mot de passe :</label>
      <input type="password" name="password" required />

      <button type="submit">Se connecter</button>
    </form>

    <a href="/documentation">Voir la documentation</a>

    <%- include("partials/footer") %>
  </body>
</html>
