<%- include("partials/header") %>

<h2>Tableau de bord</h2>

<h3>Gestion utilisateurs</h3>

<% if (typeof query !== "undefined" && query.success) { %>
<div class="alert alert-success"><%= query.success %></div>
<% } %> <% if (typeof query !== "undefined" && query.error) { %>
<div class="alert alert-danger"><%= query.error %></div>
<% } %>

<h4>Créer un utilisateur</h4>
<form action="/auth/register" method="POST">
  <input type="text" name="name" placeholder="Nom" required />
  <input type="email" name="email" placeholder="Email" required />
  <input type="password" name="password" placeholder="Mot de passe" required />
  <button type="submit">Créer</button>
</form>

<h4>Modifier un utilisateur</h4>
<form action="/users/update" method="POST">
  <input type="text" name="id" placeholder="ID user" required />
  <input type="text" name="name" placeholder="Nouveau nom" />
  <input type="email" name="email" placeholder="Nouvel email" />
  <button type="submit">Modifier</button>
</form>

<h4>Supprimer un utilisateur</h4>
<form action="/users/delete" method="POST">
  <input type="text" name="id" placeholder="ID user" required />
  <button type="submit">Supprimer</button>
</form>

<hr />

<h3>Gestion Catways</h3>

<h4>Créer un catway</h4>
<form action="/form/catways/create" method="POST">
  <input type="text" name="catwayNumber" placeholder="Numéro" required />
  <input type="text" name="type" placeholder="Type" required />
  <input type="text" name="catwayState" placeholder="État" required />
  <button type="submit">Créer</button>
</form>

<h4>Modifier un catway</h4>
<form action="/form/catways/update" method="POST">
  <input type="text" name="id" placeholder="ID catway" required />
  <input type="text" name="catwayNumber" placeholder="Nouveau numéro" />
  <input type="text" name="catwayState" placeholder="Nouvel état" />
  <button type="submit">Modifier</button>
</form>

<h4>Supprimer un catway</h4>
<form action="/form/catways/delete" method="POST">
  <input type="text" name="id" placeholder="ID catway" required />
  <button type="submit">Supprimer</button>
</form>

<h4>Afficher un catway</h4>
<form action="/form/catways/view" method="POST">
  <input type="text" name="id" placeholder="ID catway" required />
  <button type="submit">Voir</button>
</form>

<hr />

<h3>Gestion Réservations</h3>

<h4>Créer une réservation</h4>
<form action="/form/reservations/create" method="POST">
  <input
    type="number"
    name="catwayNumber"
    placeholder="Catway Number"
    required
  />
  <input type="text" name="clientName" placeholder="Nom client" required />
  <input type="text" name="boatName" placeholder="Nom bateau" required />
  <input type="date" name="checkIn" required />
  <input type="date" name="checkOut" required />
  <button type="submit">Créer</button>
</form>

<h4>Afficher une réservation</h4>
<form action="/form/reservations/view" method="POST">
  <input type="text" name="id" placeholder="ID réservation" required />
  <button type="submit">Voir</button>
</form>

<h4>Supprimer une réservation</h4>
<form action="/form/reservations/delete" method="POST">
  <input type="text" name="id" placeholder="ID réservation" required />
  <button type="submit">Supprimer</button>
</form>

